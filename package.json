{
  "name": "@negebauer/telegram-bot",
  "version": "0.0.1",
  "description": "Personal telegram bot",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "build:watch": "yarn build --watch",
    "dev": "nodemon --watch src --ext ts,js,txt node -r ts-node/register",
    "dev:file": "nodemon --ext ts,js",
    "docker:build": "docker build -t negebauer/telegram-bot .",
    "docker:push": "docker push negebauer/telegram-bot",
    "docker:run": "./scripts/docker_run.sh",
    "lint": "concurrently 'yarn:lint:code' 'yarn:lint:package'",
    "lint:code": "eslint src scripts",
    "lint:code:fix": "yarn lint:code --fix",
    "lint:fix": "concurrently 'yarn:lint:code:fix' 'yarn:lint:package:fix'",
    "lint:package": "sort-package-json --check",
    "lint:package:fix": "sort-package-json",
    "sendMessage": "ts-node scripts/sendMessage.ts $CHAT_ID",
    "start": "node -r ts-node/register src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "updateCommands": "ts-node scripts/updateCommands.ts"
  },
  "dependencies": {
    "@types/node": "^14.10.1",
    "@types/puppeteer": "^3.0.2",
    "dayjs": "^1.8.35",
    "puppeteer": "^5.3.0",
    "telegraf": "^3.38.0",
    "telegraf-session-local": "^2.0.0",
    "ts-node": "^9.0.0"
  },
  "devDependencies": {
    "@negebauer/eslint-config-base": "^1.2.0",
    "@negebauer/prettier-config": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "babel-eslint": "^10.1.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.9.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "sort-package-json": "^1.44.0",
    "typescript": "^4.0.2"
  }
}
